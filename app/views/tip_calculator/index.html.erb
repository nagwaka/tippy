<%= form_with url: tip_calculator_path, method: :get, local: true do |form| %>
  <div class="vh-200" style="background-color: #ffffff;">
    <div class="d-flex justify-content-center align-items-center vh-200">
      <div class="row shadow rounded p-4" style="background-color: white; width: 900px;">
        <!-- Input Section -->
        <div class="col-12 col-md-6 bg-light d-flex flex-column justify-content-center p-4" style="border-right: 1px solid #ddd;">
          <h1 class="text-center mb-4" style="color: #343a40;">Tippy</h1>
          <!-- Bill Amount Input -->
          <div class="form-group">
            <%= form.label :bill_amount, "Bill Amount", class: "form-label text-muted" %>
            <%= form.number_field :bill_amount, step: 0.01, min: 0, required: true, class: "form-control rounded-pill shadow-sm", placeholder: "$0.00" %>
          </div>
          <!-- Tip Percentage Input -->
          <div class="form-group">
            <%= form.label :tip_percentage, "Tip Percentage (%)", class: "form-label text-muted" %>
            <%= form.number_field :tip_percentage, value: 15, min: 0, step: 1, required: true, class: "form-control rounded-pill shadow-sm" %>
          </div>
          <!-- Number of People Input -->
          <div class="form-group mb-4">
            <%= form.label :number_of_people, "Number of People", class: "form-label text-muted" %>
            <%= form.number_field :number_of_people, value: 1, min: 1, step: 1, required: true, class: "form-control rounded-pill shadow-sm" %>
          </div>
          <!-- Submit Button -->
          <div class="text-center">
            <%= form.submit "Calculate", class: "btn px-5 py-2 rounded-pill", style: "background-color: #343a40; color: white; border: none;" %>
          </div>
        </div>
        <!-- Display Section -->
        <div class="col-12 col-md-6 bg-dark text-white d-flex flex-column justify-content-center text-center p-4" style="border-radius: 8px;">
          <% if @bill_amount %>
            <div  class="text-start">
              <p class="mb-3">
                <strong style="margin-right: 61px;">Tip Amount</strong>
                <span style="margin-right: 50px;">:</span>
                <span style="margin-left: 5px;">$<%= sprintf('%.2f', @tip_amount) %></span>
              </p>
          
              <p class="mb-3">
                  <strong style="margin-right: 82px;">Total Bill</strong>
                  <span style="margin-right: 50px;">:</span>
                  <span style="margin-left: 5px;">$<%= sprintf('%.2f', @total_bill) %></span>
              </p>
              <p class="mb-0">
                  <strong style="margin-right: 5px;">Amount Per Person</strong>
                  <span style="margin-right: 50px;">:</span>
                  <span style="margin-left: 5px;">$<%= sprintf('%.2f', @per_person_amount) %></span>
              </p>
            </div>
          <% else %>
            <div>
              <p class="mb-0">Enter the details to calculate the tip and total amount per person!</p>
            </div>
          <% end %>
          <button type="reset" class="btn btn-light mt-3 px-5 py-2 rounded-pill">Reset</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- Link to Home Page -->
<div class="text-center mt-4">
  <%= link_to "Home", root_path, class: "btn btn-secondary" %> 
</div>